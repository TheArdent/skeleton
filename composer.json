{
    "name": "aios/laravel-skeleton",
    "description": "Laravel Skeleton for new developments",
    "keywords": ["laravel", "docker", "ide-helper", "caddy-server"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.1",
        "barryvdh/laravel-ide-helper": "^2.4",
        "intervention/image": "^2.3",
        "laravel/framework": "5.6.*",
        "laravel/tinker": "~1.0",
        "laravelrus/sleepingowl": "4.*@dev",
        "nwidart/laravel-modules": "^3.0",
        "predis/predis": "^1.1",
        "santigarcor/laratrust": "4.0.*",
        "sentry/sentry-laravel": "^0.9.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan ide-helper:generate",
            "php artisan ide-helper:meta"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
